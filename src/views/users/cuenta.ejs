<!doctype html>
<html lang="es">
<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

      <main class="cuenta">
        <!-- Iniciar sesión -->
        <div class="formulario">
          <h2>Iniciar Sesión</h2>
          <form method="POST" action="/users/login">
            <label for="email-login">Email</label>
            <input type="email" id="email-login" name="email" placeholder="Ingresá tu email">

            <label for="password-login">Contraseña</label>
            <input type="password" id="password-login" name="password" placeholder="Ingresá tu contraseña">

            <div class="checkbox">
              <input type="checkbox" id="recordarme" name="recordarme">
              <label for="recordarme">Recordarme</label>
            </div>

            <button type="submit">INGRESAR</button>
            <p><a href="#">Olvidé mi contraseña</a></p>
          </form>
        </div>

        <!-- Crear cuenta -->
        <div class="formulario">
          <h2>Crear Cuenta</h2>
          <form method="POST" action="/users/register">
            <label for="nombre">Nombre y Apellido</label>
            <input type="text" id="nombre" name="fullname" placeholder="Ingresá tu nombre completo">

            <label for="email-registro">Email</label>
            <input type="email" id="email-registro" name="email" placeholder="Ingresá tu email">

            <label for="password-registro">Contraseña</label>
            <input type="password" id="password-registro" name="password" placeholder="Creá una contraseña">

            <label for="confirmar-password">Confirmar Contraseña</label>
            <input type="password" id="confirmar-password" name="passwordConfirm" placeholder="Repetí tu contraseña">

            <div class="checkbox">
              <input type="checkbox" id="terminos" name="terminos">
              <label for="terminos">Acepto los términos y condiciones</label>
            </div>

            <button type="submit">CREAR CUENTA</button>
          </form>
        </div>
      </main>

      <%- include('../partials/footer') %>
  </body>

</html>