<%- include('../partials/head', { title: title || producto.name }) %> <%-
include('../partials/header') %>

<main class="detalle-producto">
  <div class="imagen-principal">
    <img src="/img/<%= producto.image %>" alt="<%= producto.name %>" />
  </div>

  <div class="info">
    <h2><%= producto.name %></h2>
    <p class="precio">$<%= producto.price %></p>
    <p><%= producto.description %></p>

    <!-- Botón principal -->
    <a class="btn-carrito" href="#">AGREGAR AL CARRITO</a>

    <!-- Acciones secundarias -->
    <div class="acciones-secundarias">
      <a href="/products/<%= producto.id %>/edit" class="btn-secundario">
        Editar
      </a>

      <form
        action="/products/<%= producto.id %>?_method=DELETE"
        method="POST"
        class="form-eliminar"
        onsubmit="return confirm('¿Seguro que querés eliminar este producto?');"
      >
        <button type="submit" class="btn-secundario btn-danger">
          Eliminar
        </button>
      </form>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
